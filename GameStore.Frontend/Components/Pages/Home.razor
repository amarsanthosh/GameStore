@page "/"
@using Models


<PageTitle>GameCatolog</PageTitle>


<table class = "table table-striped table-bordered table-hover">
    <thead class = "table-dark">
        <th>Id</th>
        <th>Name</th>
        <th>Genre</th>
        <th class = "text-end">Price</th>
        <th>RealeaseDate</th>
        <th> </th>


    </thead>
    <tbody>
        @foreach(var game in games){
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
                <td>@game.Genre</td>
                <td class = "text-end">@game.Price.ToString("(2")</td>
                <td>@game.ReleaseDate</td>
                <td> </td>
            </tr>
        }
    </tbody>
</table>


@code{
    @* private  *@
    private GameSummary[]? games ; 


}

